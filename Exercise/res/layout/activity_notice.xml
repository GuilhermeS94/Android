<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GridLayNotice"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background"
    android:columnCount="3"
    android:orientation="horizontal"
    android:padding="10dp"
    android:rowCount="3"
    tools:context="${relativePackage}.${activityClass}" >

    <Space
        android:layout_column="0"
        android:layout_row="0" />

    <TextView
        android:id="@+id/lblTitulo"
        android:layout_height="50dp"
        android:typeface="sans"
        android:layout_column="1"
        android:layout_gravity="center"
        android:layout_row="0"
        android:text="@string/lblTitulo"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/purple" />

    <Space
        android:layout_column="2"
        android:layout_row="0" />

    <Space
        android:layout_column="0"
        android:layout_row="1" />

    <TextView
        android:id="@+id/lblConteudo"
        android:layout_height="wrap_content"
        android:typeface="sans"
        android:layout_column="1"
        android:layout_gravity="center"
        android:layout_row="1"
        android:text="@string/lblConteudo"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/black" />

    <Space
        android:layout_column="2"
        android:layout_row="1" />
    
    <LinearLayout 
        android:orientation="vertical"
        android:layout_column="1"
        android:layout_row="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
                
        <Button
	        android:id="@+id/btnContinuar"
	        android:background="@drawable/buttonstyle"
	        android:textColor="@color/purple"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_gravity="center_horizontal|bottom"
	        android:text="@string/txBtnContinuar" />

    	<Button
	        android:id="@+id/btnFechar"
	        android:background="@drawable/buttonstyle"
	        android:textColor="@color/closeGray"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_gravity="center_horizontal|bottom"
	        android:text="@string/txBtnFechar" />
    	
    </LinearLayout>

</GridLayout>