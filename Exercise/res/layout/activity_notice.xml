<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/grid_lay_notice"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background"
    android:columnCount="3"
    android:orientation="horizontal"
    android:padding="10dp"
    android:rowCount="3"
    tools:context="${relativePackage}.${activityClass}" >

    <Space
        android:layout_column="0"
        android:layout_row="0" />

    <TextView
        android:id="@+id/lbl_titulo"
        android:layout_height="50dp"
        android:layout_column="1"
        android:layout_gravity="center"
        android:layout_row="0"
        android:text="@string/lbl_titulo"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/purple"
        android:typeface="sans" />

    <Space
        android:layout_column="2"
        android:layout_row="0" />

    <Space
        android:layout_column="0"
        android:layout_row="1" />

    <TextView
        android:id="@+id/lbl_conteudo"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="center"
        android:layout_row="1"
        android:text="@string/lbl_conteudo"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/black"
        android:typeface="sans" />

    <Space
        android:layout_column="2"
        android:layout_row="1" />
    
    <LinearLayout 
        android:orientation="vertical"
        android:layout_column="1"
        android:layout_row="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
                
        <Button
	        android:id="@+id/btn_continuar"
	        android:background="@drawable/buttonstyle"
	        android:textColor="@color/purple"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_gravity="center_horizontal|bottom"
	        android:text="@string/tx_btn_continuar" />

    	<Button
	        android:id="@+id/btn_fechar"
	        android:background="@drawable/buttonstyle"
	        android:textColor="@color/close_gray"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_gravity="center_horizontal|bottom"
	        android:text="@string/tx_btn_fechar" />
    	
    </LinearLayout>

</GridLayout>