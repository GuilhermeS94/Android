<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >

<TextView android:id="@+id/nome"  
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:text="Nome:" />
    
<EditText android:id="@+id/campoNome"
android:layout_width="fill_parent"
android:layout_height="wrap_content" />

<TextView android:id="@+id/tipo"  
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:text="Tipo:" />
    
<EditText android:id="@+id/campoTipo"
android:layout_width="fill_parent"
android:layout_height="wrap_content" />

<TextView android:id="@+id/dono"  
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:text="Dono:" />
    
<EditText android:id="@+id/campoDono"
android:layout_width="fill_parent"
android:layout_height="wrap_content"/>

<TextView android:id="@+id/telefone"  
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:text="Telefone:" />
    
<EditText android:id="@+id/campoTelefone"
android:layout_width="fill_parent"
android:layout_height="wrap_content" />

<Button android:id="@+id/botaoInserir"  
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:text="Inserir" />

</LinearLayout>